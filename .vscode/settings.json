{
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk",
            "tools": [
                "latexmk"
            ]
        },
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-xelatex",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdfxe",
                "-outdir=%OUTDIR%",
                "%DOC%",
            ],
            "env": {
                "TEXINPUTS": "./bachelors-theses-2019/source/;"
            }
        },
    ]
}
